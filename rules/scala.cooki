
def scala_lib(name, srcs, deps = [], cp = []) {

  genrule(
      name = name,
      inputs = srcs,
      deps = deps,
      tools = cp,
      cmds = [
          "CP=(${ALL_DEP_OUTPUT_DIRS[*]} ${TOOLS[*]})",
          "CP=$(printf :%s ${CP[*]})",
          "CP=${CP:1}",
          "[[ \"$CP\" == \"\" ]] || ADD_CP=\"-cp $CP\"",
          "fsc -deprecation -d $OUTPUT_DIR $ADD_CP ${INPUTS[*]}",
      ],
  )
}
