
def scala_lib(name, srcs, deps = [], cp = []) {

  genrule(
      name = name,
      inputs = srcs,
      deps = deps,
      tools = cp,
      cmds = [
          "CP=(${DEP_OUTPUT_DIRS[*]} ${TOOLS[*]})",
          "IFS=\":\"",
          "CP=$CP",
          "scalac -d $OUTPUT_DIR -cp $CP ${INPUTS[*]}",
      ],
  )
}
