
def java_lib(name, srcs, deps = [], cp = []) {

  genrule(
      name = name,
      inputs = srcs,
      deps = deps,
      tools = cp,
      cmds = [
          "CP=(${DEP_OUTPUT_DIRS[*]} ${TOOLS[*]})",
          "IFS=\":\"",
          "CP=$CP",
          "javac -d $OUTPUT_OUT -cp $CP ${INPUTS[@]}"
      ]
  )
}
